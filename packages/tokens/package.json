{
  "name": "@antigravity/tokens",
  "version": "1.0.0",
  "description": "iOS + Airbnb inspired design tokens for the Antigravity ecosystem",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./theme.css": "./src/theme.css",
    "./tokens": {
      "import": "./dist/tokens.mjs",
      "require": "./dist/tokens.js",
      "types": "./dist/tokens.d.ts"
    },
    "./utils": {
      "import": "./dist/utils.mjs",
      "require": "./dist/utils.js",
      "types": "./dist/utils.d.ts"
    },
    "./i18n": {
      "import": "./dist/i18n.mjs",
      "require": "./dist/i18n.js",
      "types": "./dist/i18n.d.ts"
    }
  },
  "files": [
    "dist",
    "src/theme.css"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/tokens.ts src/utils.ts src/i18n.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/tokens.ts src/utils.ts src/i18n.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/**/*.ts"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
